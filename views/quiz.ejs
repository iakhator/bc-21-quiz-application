    <div class="container questions">
        <div class="row">
            <div class="page-header col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
                <p class="text-center "><i class="fa fa-graduation-cap fa-5x" aria-hidden="true"></i></p>
                <h3 class="text-center">Welcome Akhator, Itua</h3>
            </div>
            <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1" id="subject-list">

                <select class="form-control" id="subject">
                    <option>Choose Subject</option>
                    <option name="maths" value="maths"> Mathematics </option>
                    <option name="english" value="english"> English </option>
                    <option name="programming" value="programming"> Programming </option>
                    <option name="general" value="general"> General </option>
                </select>
                <input id="changeSubject" class="changesubject" type="button" value="Go" onclick="showQuestions()"/>
            </div>
            <div class="col-md-8 col-md-offset-2 col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3 question-row wrapper" id="wrapper">
                <h1 class="text-center" id="topic"></h1>
                <div class="col-md-10 col-md-offset-1 manage">
                    <div id="quest" class="quest text-center"></div>
                    <div id="radioId">
                        <label class="option"><input type="radio" name="radio1" value="1"><span id="option1" ></span></label>
                        <label class="option"><input type="radio" name="radio1" value="2"><span id="option2" ></span></label>
                        <label class="option"><input type="radio" name="radio1" value="3"><span id="option3" ></span></label>
                        <label class="option"><input type="radio" name="radio1" value="4"><span id="option4" ></span></label>
                        <button name="btnnext" class="next-btn" id="btnext">Next</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="show-result" id="result">
                    <p><i class="fa fa-smile-o" aria-hidden="true"></i></p>
                    <p id="feedback">You passed</p>
                    <p id="score"> 70 </p>
                </div>
            </div>
        </div>
