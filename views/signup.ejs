<%include home/head.ejs %>
<div class="container">
           <div class="row">
               <div class="col-md-6 col-md-offset-3 col-xs-6 col-xs-offset-3 signin-row">
                   <div class="social text-center">
                       <p>SIGN-UP</p>
                   </div>
                   <% if(flash.info) {%>
	  	                <p class="alert alert-danger"><%= flash.info %></p>
                    <%}%>
                   <form action="/signup" method="post" name="signup">
                       <input class="form-control" type="text" name="name" placeholder="your fullname">
                       <input class="form-control" type="text" name="email" placeholder="youremail@email.com">
                       <input class="form-control" type="password" name="password" placeholder="your password">
                       <button type="submit" class="center col-md-4 col-md-offset-4">Sign Up</button>
                   </form>
               </div>
           </div>
       </div>
   </div>
   <%include home/foot.ejs %>
